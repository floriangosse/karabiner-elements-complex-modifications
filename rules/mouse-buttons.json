{
    "title": "Change mouse button4/5 to browser back/forward",
    "rules": [
        {
            "description": "Mouse back",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button4"
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": ["left_command"]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Mouse forward",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button5"
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": ["left_command"]
                        }
                    ]
                }
            ]
        }
    ]
}
